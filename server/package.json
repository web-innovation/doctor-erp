{
  "name": "docclinic-server",
  "version": "1.0.0",
  "description": "DocClinic ERP Backend API",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "build": "echo 'No build required for Node.js'",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:generate:rds": "prisma generate --schema=./prisma-postgres/schema.prisma",
    "db:migrate": "prisma migrate dev",
    "db:migrate:rds": "prisma migrate deploy --schema=./prisma-postgres/schema.prisma",
    "db:validate:rds": "prisma validate --schema=./prisma-postgres/schema.prisma",
    "db:seed:rds": "npm run prisma:generate:rds && node prisma/seed.js",
    "db:migrate:prod": "prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "db:studio": "prisma studio",
    "lint": "eslint src/",
    "test": "jest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.300.0",
    "@aws-sdk/client-sns": "^3.300.0",
    "@google/genai": "^1.42.0",
    "@google/generative-ai": "^0.2.1",
    "@prisma/client": "^5.10.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.23",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.9",
    "openai": "^4.3.0",
    "pdfkit": "^0.15.0",
    "sharp": "^0.33.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prisma": "^5.10.0",
    "supertest": "^6.3.3"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
